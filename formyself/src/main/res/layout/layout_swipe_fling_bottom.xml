<?xml version="1.0" encoding="utf-8"?>
<com.kunkun.forlove.formyself.view.SwipeFlingBottomLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_fling_bottom"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:orientation="horizontal">

    <com.kunkun.forlove.formyself.view.BottomSwitchView
        android:id="@+id/unlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@drawable/icon_unlike_normal"/>

    <com.kunkun.forlove.formyself.view.BottomSwitchView
        android:layout_weight="1"
        android:id="@+id/comeback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:src="@drawable/icon_comeback"
        tools:src="@drawable/icon_comeback"/>

    <com.kunkun.forlove.formyself.view.BottomSwitchView

        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:clickable="true"
        android:src="@drawable/icon_like_normal"/>

    <com.kunkun.forlove.formyself.view.BottomSwitchView
        android:layout_weight="1"
        android:id="@+id/superlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:src="@drawable/icon_superlike"
        tools:src="@drawable/icon_superlike"/>
</com.kunkun.forlove.formyself.view.SwipeFlingBottomLayout>